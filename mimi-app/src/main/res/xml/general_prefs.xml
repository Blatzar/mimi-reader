<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="@string/general_preference_category"
        android:title="@string/general_title">

        <SwitchPreference
            android:title="@string/remember_thread_position_title"
            android:summary="@string/remember_thread_position_summary"
            android:key="@string/remember_thread_position_pref"
            android:defaultValue="true" />

        <SwitchPreference
            android:title="@string/open_links_externally"
            android:summaryOn="@string/open_links_default_browser"
            android:summaryOff="@string/open_links_internally"
            android:key="@string/open_links_externally_pref"
            android:defaultValue="false" />

        <ListPreference
            android:title="@string/nav_drawer_bookmark_count"
            android:key="@string/nav_drawer_bookmark_count_pref"
            android:defaultValue="5"
            android:entries="@array/nav_drawer_bookmark_list"
            android:entryValues="@array/nav_drawer_bookmark_list" />

        <SwitchPreference
            android:title="@string/ask_before_closing_tabs"
            android:key="@string/close_all_tabs_prompt_pref"
            android:defaultValue="true" />

        <SwitchPreference
            android:title="@string/close_tab_on_back_title"
            android:summaryOn="@string/close_tab_on_back_summary_on"
            android:summaryOff="@string/close_tab_on_back_summary_off"
            android:key="@string/close_tab_on_back_pref"
            android:defaultValue="false" />

        <SwitchPreference
            android:title="@string/enable_emoji_text"
            android:summary="@string/enable_emoji_summary"
            android:key="@string/enable_emoji_pref"
            android:defaultValue="false" />

    </PreferenceCategory>

</PreferenceScreen>
