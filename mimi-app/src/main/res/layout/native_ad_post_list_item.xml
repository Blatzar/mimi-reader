<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?cardBackgroundSelector"
    android:id="@+id/post_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            style="?postHeaderText"
            android:id="@+id/sponsored_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="right|center_vertical"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:singleLine="true"
            android:textSize="11sp"
            android:text="@string/sponsored"/>

        <TextView
            style="?postSubjectText"
            android:id="@+id/native_ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            style="?postCommentText"
            android:id="@+id/native_ad_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="14sp" />

        <com.emogoth.android.phone.mimi.view.GridItemImageView
            android:id="@+id/native_ad_main_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/native_ad_ctatext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:maxLines="3"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/native_ad_cta_background"
            android:text="Install"/>


    </LinearLayout>
</android.support.v7.widget.CardView>
