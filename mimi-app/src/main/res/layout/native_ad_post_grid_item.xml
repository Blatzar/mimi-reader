<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="?cardBackgroundSelector"
    android:id="@+id/post_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp" >

            <TextView
                style="?postHeaderText"
                android:id="@+id/sponsored_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:gravity="right|center_vertical"
                android:layout_weight="1"
                android:paddingRight="1dp"
                android:paddingLeft="1dp"
                android:paddingTop="4dp"
                android:singleLine="true"
                android:textSize="11sp"
                android:paddingBottom="4dp"
                android:text="@string/sponsored"/>

            <!--<com.etsy.android.grid.util.DynamicHeightImageView-->
                <!--android:id="@+id/native_ad_main_image"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:minHeight="50dp"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:scaleType="fitXY"-->
                <!--android:background="#FFFFFF" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.emogoth.android.phone.mimi.view.GridItemImageView
                    android:id="@+id/native_ad_icon_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY" />

                <TextView
                    style="?postSubjectText"
                    android:id="@+id/native_ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        <TextView
            style="?postCommentText"
            android:id="@+id/native_ad_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:gravity="left"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="12sp"
            android:textStyle="normal" />

            <TextView
                android:id="@+id/native_ad_ctatext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:maxLines="3"
                android:textSize="12sp"
                android:ellipsize="end"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:background="@drawable/native_ad_cta_background"/>

        </LinearLayout>

</android.support.v7.widget.CardView>
