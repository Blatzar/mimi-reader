<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="?defaultLayoutBackground"
    android:layout_width="match_parent"
    android:layout_height="@dimen/advert_height"
    tools:context="com.emogoth.android.phone.mimi.fragment.ThreadAdvertFragment">

    <com.mopub.mobileads.MoPubView
        android:id="@+id/advert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.emogoth.android.phone.mimi.view.IconTextView
        android:id="@+id/hide_advert"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="@string/ic_close"
        android:textSize="23sp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textAlignment="center"
        android:gravity="top|left"
        android:layout_gravity="top|left"/>

</FrameLayout>
